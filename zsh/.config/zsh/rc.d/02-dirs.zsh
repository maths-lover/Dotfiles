#!/bin/zsh

# Named directories
# Set these early as these define how directories
# are displayed later

# Create shortcuts for favorite directories
# `hash -d <name>=<path>` makes ~<name> a shorcut for <path>.
hash -d z=$ZDOTDIR
hash -d g=$gitdir
hash -d docs=$HOME/Documents
hash -d dloads=$HOME/Downloads
hash -d moosic=$HOME/Music
hash -d pics=$HOME/Pictures
hash -d devgo=$HOME/dev/go/src/github.com/maths-lover
hash -d devrust=$HOME/dev/rust
hash -d devcpp=$HOME/dev/cpp
hash -d devc=$HOME/dev/c
hash -d devpy=$HOME/dev/python
hash -d devjava=$HOME/dev/java
hash -d devasm=$HOME/dev/asm
hash -d bedios=$HOME/Videos
